@model _072_HammadArshad_Task1.Models.Register
@{ 
    ViewBag.Title = "Register Admin";
}

<section class="Register-form">
    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-md-5 order-last order-md-first my-2 align-self-center">
                <h2 class="text-center my-2">Register</h2>
                <form asp-action="RegisterAdmin" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Username" class="form-text"></label>
                        <input asp-for="Username" class="form-control" />
                        <span asp-validation-for="Username" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Email" class="form-text"></label>
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="password" class="form-text"></label>
                        <input asp-for="password" class="form-control" />
                        <span asp-validation-for="password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="confirmpassword" class="form-text"></label>
                        <input asp-for="confirmpassword" class="form-control" />
                        <span asp-validation-for="confirmpassword" class="text-danger"></span>
                    </div>
                    <div class="register-btn">
                        <button class="btn btn-success"><i class="far fa-check-circle"></i> Submit</button>
                    </div>
                </form>
            </div>
            <div class="col-md-6 order-md-last order-first">
                <img src="/images/signup.png" class="img-fluid" alt="Alternate Text" />
            </div>
        </div>

    </div>
</section>
    
